<!DOCTYPE html>
<html lang="en">
  <%- include('../includes/head.ejs') %>

  <body>
    <%- include('../includes/navigation.ejs') %>
    <main>
      <% if(products.length>0 && totalPrice){ %> 
        <ul class="cart__item-list" >
          <% for(let product of products){ %> 
             <li class="cart__item" ><p><%=product.productId.title%> (<%=product.quantity%>)</p>
              <form action="/cart-delete-item" method="POST">
                <input type="hidden" name="productId" value='<%= product.productId._id %>'>
                <input type="hidden" name="productPrice" value='<%= product.productId.price %>'>
                <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
                <button class="btn" type="submit" >Delete</button>
              </form>
            </li>
             <% } %> 
        </ul>
        <div class="centered" >
        <form action="/create-order" method="POST" >
          <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
          <button class="btn" type="submit" >Place Order</button>
        </form>
        </div>
        <% }else{ %>
          <h1>No products has found please add some</h1>
          <% } %>  
    </main> 
  </body>
</html>
