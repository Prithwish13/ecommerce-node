<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(errorMessage){ %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                <form class="login-form" action="/signup" method="POST">
                    <div class="form-control">
                        <label for="email">Email</label>
                        <input 
                        class="<%= validationError.find(e=>e.param==='email') ?'invalid':''%> "
                        type="text" name="email" id="email" value="<%= oldInp.email %>"  />
                    </div>

                    <div class="form-control">
                        <label for="password">Password</label>
                        <input
                         class="<%= validationError.find(e=>e.param==='password') ?'invalid':''%> "
                        type="password" name="password" id="password"  value="<%= oldInp.password %>"/>
                    </div>

                    <div class="form-control">
                        <label for="confirmPassword">Confirm Password</label>
                        <input
                         class="<%= validationError.find(e=>e.param==='confirmPassword') ?'invalid':''%> " 
                        type="confirmPassword" name="confirmPassword" id="confirmPassword" />
                    </div>
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
                    <button class='btn' type='submit'>Signup</button>
                </form>
            </main>
    </body>

</html>